    <label for="ship_type_2">Ship Type: </label>
    <input type="text" name="ship_type_2" id="pirate[ships][][type]">
    <label for="ship_booty_2">Ship Booty: </label>
    <input type="text" name="ship_booty_2" id="pirate[ships][][booty]">

    <input type="submit" id="Submit">
