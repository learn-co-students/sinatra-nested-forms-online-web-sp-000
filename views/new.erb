    <input type="text" name="pirate[name]" id="pirate[name]">
    <label for="pirate[weight]">Pirate Weight: </label>
    <input type="text" name="pirate[weight]" id="pirate[weight]">
    <label for="pirate[height]">Pirate Height: </label>
    <input type="text" name="pirate[height]" id="pirate[height]">
    <h2>First Ship</h2>
    <label for="ship_name_1">Ship Name: </label>
    <input type="text" name="ship_name_1" id="pirate[ships][][name]">
    <label for="ship_type_1">Ship Type: </label>
    <input type="text" name="ship_type_1" id="pirate[ships][][type]">
    <label for="ship_booty_1">Ship Booty: </label>
    <input type="text" name="ship_booty_1" id="pirate[ships][][booty]">
    <h2>Second Ship</h2>
