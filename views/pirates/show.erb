<h1>Display your Pirate here</h1>
<%= @pirate.name%>
<%= @pirate.weight %>
<%= @pirate.height %>
<h2>Display your first ship here</h2>
<% @ships.each.with_index do |ship, index| %>
    <% if index == 0 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
  <% end %>
<h2>Display your second ship here</h2>
<% @ships.each.with_index do |ship, index| %>
    <% if index == 1 %>
    <p>Name: <%= ship.name%></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
    <% end %>
  <% end %>
