<h1>Display your Pirate here</h1>

<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h3>Weight: <%= @pirate.weight %></h3><br>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<% @ships.each do |ships| %>
  <div class="ships">
    <p>Ship Name: <%= ships.name %></p><br>
    <p>Ship Type: <%= ships.type %></p><br>
    <p>Ship Booty: <%= ships.booty %></p><br>

  </div><br>
<% end %>
