<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
  <h3>Height:  <%= @pirate.height %></h3>

<% @ships.each.with_index do |ship, index| %>
    <h2>Ship Number: <%= index + 1%></h2>
    <div class="ship">
        <p>Name: <%= ship.name %></p>
        <p>Type: <%= ship.type %></p>
        <p>Booty: <%= ship.booty %></p>
        <% end %>
    
    </div>

