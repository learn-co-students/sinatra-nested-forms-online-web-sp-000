
<h1>Pirate</h1>
<div class="pirate">
    <p><h3>Name: <%=@pirate.name%></h3></p>
    <p><h4>Weight: <%=@pirate.weight%></h4></p>
    <p><h4>Height: <%=@pirate.height%></h4></p>
</div>

<h2>Ships</h2>
<% @ships.each do |ship| %>
<div class = "ships">
    <p><h4>Name: <%= ship.name %></h4></p>
    <p><h4>Type: <%= ship.type %></h4></p>
    <p><h4>Booty: <%= ship.booty %></h4></p>
</div>
<%end%>
