<body>
<h1>Pirate</h1>
<div class="pirate">
<p>Pirate Name: <%= @pirate.name %></p>
<p>Pirate Weight: <%= @pirate.weight %></p>
<p>Pirate Height: <%= @pirate.height %></p>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
    <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p><br>
    </div><br>
<%end %>



</body>