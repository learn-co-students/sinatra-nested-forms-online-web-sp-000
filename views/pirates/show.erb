<h1>Display your Pirate here</h1>
  <div class="pirate">
    <h3>Pirate Name: <%= @pirate.name %></h3>
    <h4>Pirate Height: <%= @pirate.height %></h4>
    <h4>Pirate Weight: <%= @pirate.weight %></h4>
  </div><br>

<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>
