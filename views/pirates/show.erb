<h1>Display your Pirate here</h1>
  <div class="pirate">
    <h2>Name: <%= @pirate.name %></h2>
    <h3>Weight: <%= @pirate.weight %></h3>
    <h3>Height: <%= @pirate.height %></h3>
  </div><br>

<h2>Display your first and second ships here</h2>
  <% n=1 %>
  <% @ships.each do |ship| %>
      <h3>Ship Name #<%= "#{n}" %>: <%= ship.name %></h3>
      <h3>Ship Type #<%= "#{n}" %>: <%= ship.type %></h3>
      <h3>Ship Booty #<%= "#{n}" %>: <%= ship.booty %></h3><br>

      <% n+=1 %>
  <%end%>
