
<h1>Pirate</h1>
    <div class="pirate">
    <p>Name: <%= @new_pirate.name %></p>
    <p>Weight: <%= @new_pirate.weight %></p>
    <p>Height: <%= @new_pirate.height %></p>
    </div>

<h2>Ships</h2>
    <% @ships.each do |ship| %>
        <div class="ship">
            <p>Name: <%= ship.name %></p>
            <p>Type: <%= ship.type %></p>
            <p>Booty: <%= ship.booty %></p>
        </div>
    <% end %>




