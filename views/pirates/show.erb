<h1>Pirates</h1>

    <div class="pirate">
        <h3>Name: <%= @pirate.name %></h3><br>
        <h3>Name: <%= @pirate.weight %></h3><br>
        <h3>Name: <%= @pirate.height %></h3><br>
    </div><br>

<h2>Ships</h2>
    

<h2>Display your second ship here</h2>
    <% @ships.each do |ship| %>
        <p>Name: <%= ship.name %> </p><br>
        <p>Type: <%= ship.type %> </p><br>
        <p>Booty: <%= ship.booty %> </p><br>
        <% end %>
