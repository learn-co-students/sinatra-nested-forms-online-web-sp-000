<h1>Pirates</h1>
<div class="pirates">
    <h3>Name: <%= @pirate.name %></h3><br>
    <h4>Weight: <%= @pirate.weight %></h4><br>
    <h4>Hieght: <%= @pirate.height %></h4>
</div><br>

<h2>Ship(s)</h2>
    <% @ships.each do |ship| %>
        <div class="ship">
            <p>Name: <%= ship.name %></p><br>
            <p>Type: <%= ship.type %></p><br>
            <p>Booty: <%= ship.booty %></p>
        </div><br>
    <% end %>

