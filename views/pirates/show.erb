<h1>Display your Pirate here</h1>
<h3>Pirate Name:<%=@pirate.name%></h3>
<h3>Pirate Height:<%=@pirate.height%></h3>
<h3>Pirate Weight:<%=@pirate.weight%></h3>

<h2>Display your first ship here</h2>
  <% @ships.each_with_index do |ship, index| %>
    <% if index == 0 %>
     <p>Ship No 1 Name<%= ship.name %></p>
     <p>Ship No 1 Type<%= ship.type %></p>
     <p>Ship No 1 Booty<%= ship.booty %></p>
    <%end %>
  <%end %>

<h2>Display your second ship here</h2>
<% @ships.each_with_index do |ship, index| %>
  <% if index == 1 %>
   <p>Ship No 2 Name<%= ship.name %></p>
   <p>Ship No 2 Type<%= ship.type %></p>
   <p>Ship No 2 Booty<%= ship.booty %></p>
  <%end %>
<%end %>
